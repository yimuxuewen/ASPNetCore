
@using RazorPageTest.Models
@model Employee

<tr>
    <td>@Model.FirstName</td>
    <td>@Model.LastName</td>
    <td>@Model.Gender</td>
    <td>@(Model.Fired ? "是" : "")</td>
    <td>
        @if (!Model.Fired)
        {
            <a asp-page="EmployeeList" asp-page-handler="Fire" asp-route-employeeId="@Model.Id" asp-route-departmentId="@Model.DepartmentId">
                Fire
            </a>
        }
    </td>
</tr>
